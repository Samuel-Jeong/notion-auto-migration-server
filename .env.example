# 필수
NOTION_TOKEN=secret_xxx

# 덤프가 저장될 로컬 루트 디렉터리(절대경로 권장)
DUMP_ROOT=./_dumps

# 서버가 DUMP_ROOT를 정적 URL로 서빙할 때 쓸 베이스 URL (본인 환경에 맞추세요)
STATIC_BASE_URL=http://127.0.0.1:8000/files

# 자동 덤프 스케줄: 매일 02:30에 실행 예시(CRON 형식: M H D M W)
# 분 시 일 월 요일  (예: "30 2 * * *")
CRON="30 2 * * *"

# 자동 덤프 대상 노션 페이지 ID (최상위)
AUTO_DUMP_PAGE_ID=<your_root_page_id>

# 요청 타임아웃(초), 재시도 횟수
NOTION_TIMEOUT=15
NOTION_MAX_RETRIES=3